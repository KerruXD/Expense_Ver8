@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<header class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")" style="background-color: #0D7C66; position: fixed;">
    <div class="logosec hover-pointer">
        <img src="~/img/exp1.png"
             style="width: 170px;" alt="logo"
             onclick="window.location.href = '@Url.Action("Index", "Home")';">
    </div>

    <div class="logosec" style="color: white">
        @{
            var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
        }
        @fullName
        <div class="mr-20 hover-pointer" style="position: relative; display: inline-block;">
            <div class="dp">
                <img src="~/img/profile-logo.png"
                     class="dpicn hover-pointer"
                     alt="dp">
            </div>
            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-gear"></i>
                        <a asp-controller="Settings" asp-action="Index">Settings</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
